programa {
    funcao inicio() {
        // Declarando variável para armazenar o número do mês
        inteiro numeroMes

        // Repetir até que um número válido seja inserido
        faca {
            // Solicitando ao usuário que insira o número do mês
            escreva("Digite um número inteiro entre 1 e 12: ")
            leia(numeroMes)

            // Verificando se o número do mês está dentro do intervalo válido
            se (numeroMes < 1 || numeroMes > 12) {
                // Exibir mensagem de erro se o número for inválido
                escreva("Número inválido! Insira um número entre 1 e 12.\n")
            }
        } enquanto (numeroMes < 1 || numeroMes > 12)

        // Exibir o nome do mês correspondente ao número inserido
        escolha (numeroMes) {
            caso 1:
                escreva("Janeiro")
            caso 2:
                escreva("Fevereiro")
            caso 3:
                escreva("Março")
            caso 4:
                escreva("Abril")
            caso 5:
                escreva("Maio")
            caso 6:
                escreva("Junho")
            caso 7:
                escreva("Julho")
            caso 8:
                escreva("Agosto")
            caso 9:
                escreva("Setembro")
            caso 10:
                escreva("Outubro")
            caso 11:
                escreva("Novembro")
            caso 12:
                escreva("Dezembro")
        }
    }
}
